{
  "name": "module_template",
  "description": "Шаблон для создания новых AI модулей в Macro-Assistant",
  "version": "1.0.0",
  "author": "Macro-Assistant Team",
  
  "ai_settings": {
    "model": "gpt-4o-mini",
    "temperature": 0.7,
    "max_tokens": 1000,
    "timeout": 30
  },
  
  "module_settings": {
    "cache_results": true,
    "cache_ttl": 3600,
    "max_retries": 3,
    "retry_delay": 1
  },
  
  "keywords": [
    "шаблон",
    "template",
    "пример",
    "example"
  ],
  
  "capabilities": [
    "Демонстрация архитектуры модуля",
    "Пример обработки запросов",
    "Шаблон для новых модулей"
  ],
  
  "dependencies": [
    "json",
    "logging",
    "pathlib"
  ],
  
  "examples": [
    {
      "input": "Покажи как работает модуль",
      "expected_output": "Демонстрация функциональности шаблона"
    },
    {
      "input": "Создай новый модуль",
      "expected_output": "Инструкции по созданию модуля"
    }
  ]
}
